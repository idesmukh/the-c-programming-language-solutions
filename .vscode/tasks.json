{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C: gcc build active file",
            "command": "gcc",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: gcc"
        }
    ]
}